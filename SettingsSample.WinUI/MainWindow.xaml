<?xml version="1.0" encoding="utf-8" ?>
<Window
    x:Class="SettingsSample.WinUI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:common="using:SettingsSample.Common"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:SettingsSample.WinUI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="SettingsSample.WinUI"
    mc:Ignorable="d">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <ScrollViewer>
        <StackPanel
            Name="MainPanel"
            Margin="24"
            x:DefaultBindMode="TwoWay"
            DataContext="{x:Bind ViewModel, Mode=OneTime}"
            Spacing="12">
            <controls:SettingsCard Header="String">
                <TextBox Text="{x:Bind ViewModel.Settings.Name}" />
            </controls:SettingsCard>

            <controls:SettingsCard Header="Int">
                <NumberBox SpinButtonPlacementMode="Inline" Value="{x:Bind ViewModel.Settings.Count}" />
            </controls:SettingsCard>

            <controls:SettingsCard Header="Bool">
                <ToggleSwitch IsOn="{x:Bind ViewModel.Settings.IsEnabled}" />
            </controls:SettingsCard>

            <controls:SettingsExpander
                Header="ObservableCollection"
                IsExpanded="True"
                ItemsSource="{x:Bind ViewModel.Settings.Tags}">
                <controls:SettingsExpander.ItemTemplate>
                    <DataTemplate x:DataType="x:String">
                        <controls:SettingsCard
                            ActionIcon="Cancel"
                            Command="{Binding ElementName=MainPanel, Path=DataContext.RemoveTagCommand}"
                            CommandParameter="{x:Bind}"
                            Header="{x:Bind}"
                            IsClickEnabled="True">
                            <controls:SettingsCard.Transitions>
                                <AddDeleteThemeTransition />
                            </controls:SettingsCard.Transitions>
                        </controls:SettingsCard>
                    </DataTemplate>
                </controls:SettingsExpander.ItemTemplate>
                <controls:SettingsExpander.ItemsFooter>
                    <controls:SettingsCard
                        Margin="-1,0,-1,-1"
                        Command="{x:Bind ViewModel.AddTagCommand, Mode=OneTime}"
                        CommandParameter="{x:Bind TagTextBox.Text, Mode=OneWay}"
                        CornerRadius="0"
                        Header="Add"
                        HeaderIcon="Add"
                        IsClickEnabled="True">
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <TextBox x:Name="TagTextBox" Text="New Tag" />
                        </StackPanel>
                    </controls:SettingsCard>
                </controls:SettingsExpander.ItemsFooter>
            </controls:SettingsExpander>

            <controls:SettingsExpander
                Header="BindingList"
                IsExpanded="True"
                ItemsSource="{x:Bind ViewModel.Settings.Students}">
                <TextBlock Text="{x:Bind ViewModel.Settings.Students.Count, Mode=OneWay}" />
                <controls:SettingsExpander.ItemTemplate>
                    <DataTemplate x:DataType="common:Student">
                        <controls:SettingsCard
                            ActionIcon="Cancel"
                            Command="{Binding ElementName=MainPanel, Path=DataContext.RemoveStudentCommand}"
                            CommandParameter="{x:Bind}"
                            Header="{x:Bind Name}"
                            IsClickEnabled="True">
                            <NumberBox SpinButtonPlacementMode="Inline" Value="{x:Bind Age}" />
                            <controls:SettingsCard.Transitions>
                                <AddDeleteThemeTransition />
                            </controls:SettingsCard.Transitions>
                        </controls:SettingsCard>
                    </DataTemplate>
                </controls:SettingsExpander.ItemTemplate>
                <controls:SettingsExpander.ItemsFooter>
                    <controls:SettingsCard
                        Margin="-1,0,-1,-1"
                        Command="{x:Bind ViewModel.AddStudentCommand, Mode=OneTime}"
                        CornerRadius="0"
                        Header="Add"
                        HeaderIcon="Add"
                        IsClickEnabled="True">
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <TextBox Text="{x:Bind ViewModel.Name}" />
                            <NumberBox SpinButtonPlacementMode="Inline" Value="{x:Bind ViewModel.Age}" />
                        </StackPanel>
                    </controls:SettingsCard>
                </controls:SettingsExpander.ItemsFooter>
            </controls:SettingsExpander>
        </StackPanel>
    </ScrollViewer>
</Window>
